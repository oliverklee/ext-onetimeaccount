{
    "name": "oliverklee/onetimeaccount",
    "description": "Allow users to create a one-time FE account to which they will be automatically logged in (without having to enter a user name or password).",
    "type": "typo3-cms-extension",
    "keywords": [
        "account",
        "login",
        "onetime"
    ],
    "homepage": "https://www.oliverklee.de/typo3-services/typo3-extensions.html",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Oliver Klee",
            "email": "typo3-coding@oliverklee.de",
            "homepage": "https://www.oliverklee.de",
            "role": "developer"
        }
    ],
    "support": {
        "issues": "https://github.com/oliverklee/ext-onetimeaccount/issues",
        "source": "https://github.com/oliverklee/ext-onetimeaccount"
    },
    "require": {
        "php": "^5.5.0 || ~7.0.0",
        "typo3/cms-core": "^6.2 || ^7.6",
        "typo3/cms-frontend": "^6.2 || ^7.6",
        "sjbr/static-info-tables": "^6.3.7",
        "oliverklee/oelib": "^1.0.0",
        "dmk/mkforms": "^3.0.0"
    },
    "require-dev": {
        "helhum/typo3-composer-setup": "^0.5.1",
        "phpunit/phpunit": "~4.8.0"
    },
    "replace": {
        "onetimeaccount": "self.version",
        "typo3-ter/onetimeaccount": "self.version"
    },
    "autoload": {
        "classmap": [
            "Classes",
            "pi1"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "Tests"
        ]
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://composer.typo3.org/"
        }
    ],
    "config": {
        "vendor-dir": ".Build/vendor"
    },
    "scripts": {
        "require-typo3-version": [
            "@php -r '$conf=json_decode(file_get_contents(__DIR__.\"/composer.json\"),true);$conf[\"require\"][\"typo3/cms-core\"]=$_SERVER[\"argv\"][1];file_put_contents(__DIR__.\"/composer.json\",json_encode($conf,JSON_UNESCAPED_SLASHES|JSON_PRETTY_PRINT).chr(10));'",
            "@composer install"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.1.x-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/public"
        }
    }
}
