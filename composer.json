{
    "name": "oliverklee/onetimeaccount",
    "description": "Allow users to create a one-time FE account to which they will be automatically logged in (without having to enter a user name or password).",
    "type": "typo3-cms-extension",
    "keywords": [
        "account",
        "login",
        "onetime"
    ],
    "homepage": "https://www.oliverklee.de/typo3-services/typo3-extensions.html",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Oliver Klee",
            "email": "typo3-coding@oliverklee.de",
            "homepage": "https://www.oliverklee.de",
            "role": "developer"
        }
    ],
    "support": {
        "issues": "https://github.com/oliverklee/ext-onetimeaccount/issues",
        "source": "https://github.com/oliverklee/ext-onetimeaccount"
    },
    "require": {
        "php": "^5.6.0 || ~7.0.0 || ~7.1.0 || ~7.2.0",
        "typo3/cms-core": "^7.6.23 || ^8.7.9",
        "typo3/cms-frontend": "^7.6.23 || ^8.7.9",
        "sjbr/static-info-tables": "^6.4",
        "oliverklee/oelib": "^2.0 || ^3.0",
        "dmk/mkforms": "^3.0.14"
    },
    "require-dev": {
        "helhum/typo3-console": "^4.9",

        "oliverklee/phpunit": "^5.3",
        "phpunit/phpunit": "^5.6"
    },
    "conflict": {
        "sjbr/static-info-tables": "6.7.1"
    },
    "replace": {
        "onetimeaccount": "self.version",
        "typo3-ter/onetimeaccount": "self.version"
    },
    "autoload": {
        "classmap": [
            "Classes",
            "pi1"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "Tests"
        ]
    },
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://composer.typo3.org/"
        }
    ],
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "vendor-dir": ".Build/vendor"
    },
    "scripts": {
        "ci:php:lint": "find *.php Classes/ Configuration/ pi1/ Tests/ -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
        "ci:tests:unit-legacy": "$RUN_TESTS_COMMAND Tests/LegacyUnit/",
        "ci:tests": [
            "@ci:tests:unit-legacy"
        ],
        "ci:dynamic": [
            "@ci:tests"
        ],
        "ci:static": [
            "@ci:php:lint"
        ],
        "ci": [
            "@ci:static",
            "@ci:dynamic"
        ],
        "link-extension": [
            "@php -r 'is_dir($extFolder=__DIR__.\"/.Build/public/typo3conf/ext/\") || mkdir($extFolder, 0777, true);'",
            "@php -r 'file_exists($extFolder=__DIR__.\"/.Build/public/typo3conf/ext/onetimeaccount\") || symlink(__DIR__,$extFolder);'"
        ],
        "post-autoload-dump": [
            "@link-extension"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/public"
        },
        "helhum/typo3-console": {
            "install-extension-dummy": "0"
        }
    }
}
